@model PagedList.IPagedList<DataAccess.Models.MenuItem>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
}
<div class="container">
    <div class="section">
        <div class="section" id="basic-form">
            <div class="row">
                <fieldset>
                    <legend>Menu Items View</legend>
                    <div class="col-lg-2 col-md-2 col-sm-2 no-right-pad ">
                        <input type="text" class="validate" placeholder="Search" style="width:20%" id="search" />
                        @using (Html.BeginForm("Create", "MenuItem", FormMethod.Get))
                        {
                            <button name="action" type="submit" class="btn cyan waves-effect waves-light right" style="margin-top: -45px;">New Menu Item<i class="mdi-content-send right"></i></button>
                        }
                    </div>
                    <table class="table table-striped responsive-utilities jambo_table bulk_action" id="tblsearch">
                        <thead>
                            <tr>
                                <th>
                                    @Html.ActionLink("#.", "Index", new { sortOrder = ViewBag.PageIDSort, currentFilter = ViewBag.CurrentFilter })
                                </th>
                                <th>
                                    @Html.ActionLink("Item Name", "Index", new { sortOrder = ViewBag.PageLevelSort, currentFilter = ViewBag.CurrentFilter })
                                </th>
                                <th class="hidden-xs">
                                    @Html.ActionLink("Page Name", "Index", new { sortOrder = ViewBag.PageNameSort, currentFilter = ViewBag.CurrentFilter })                                    
                                </th>
                                <th >
                                    @Html.ActionLink("Item Link", "Index", new { sortOrder = ViewBag.LinkSort, currentFilter = ViewBag.CurrentFilter })
                                    
                                </th>
                                <th class="hidden-xs">
                                    @Html.ActionLink("Item Position", "Index", new { sortOrder = ViewBag.PositionSort, currentFilter = ViewBag.CurrentFilter })

                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuItemID)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuItemText)
                                    </td>

                                    <td class="hidden-xs">
                                        @Html.DisplayFor(modelItem => item.MenuPage.PageName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MenuItemLink)
                                    </td>
                                    <td class="hidden-xs">
                                        @Html.DisplayFor(modelItem => item.MenuItemPosition)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MenuItemID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MenuItemID }, new { @class = "Clicklink" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p>
                        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    </p>
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </fieldset>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#search').keyup(function () {
            searchTable($(this).val());
        });
        $(".Clicklink").click(function () {
            var r = confirm("Are you sure you want to delete this?");
            if (r == true) {
                return true;
            } else {
                return false;
            }
        });
    });
    function searchTable(inputVal) {
        var table = $('#tblsearch');
        table.find('tbody tr').each(function (index, row) {
            var allCells = $(row).find('td');
            if (allCells.length > 0) {
                var found = false;
                allCells.each(function (index, td) {
                    var regExp = new RegExp(inputVal, 'i');
                    if (regExp.test($(td).text())) {
                        found = true;
                        return false;
                    }
                });
                if (found == true) $(row).show(); else $(row).hide();
            }
        });
    }
</script>